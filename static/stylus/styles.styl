@import 'nib'
@import 'fonts.css'
blue_A = #2A6282
blue_B = #1F4D67
red_A = #F44336
red_B = #52312F
white_A = #E4DBDB
a
	color black
	text-decoration none
body
	background blue_A
	color white_A
	font-size 100%
	font-family 'Lato'
//*mixins*//
center(top='')
	margin top auto
btnstyle(background='',border-bottom='')
	background background
	border-bottom border-bottom
//*fin mixins*//
.Artist
	border 3px solid white_A
	border-radius 50%
	center(0)
	height 200px
	position relative
	width 200px
	&.is-animated
		animation fill 1s infinite
	&-name
		margin-top 1rem
	&-image
		border-radius 50%
		width 100%
		height 100%
		&.is-animated
			position absolute
			top 200%
			left 0
			width 200px
			height 200px
	&-container
		border-radius 50%
		width 100%
		height 100%
		margin 0
.Albums
	background blue_B
	text-align center
	&-number
		text-transform uppercase
	&.is-animated
		padding-top 232px
.Obtainer
	background blue_B
	display table
	text-align center
	transition 1s
	font-family 'Ubuntu', sans-serif
	height 360px
	width 100%
	&-content
		display table-cell
		vertical-align middle
	&-input
		background transparent
		border none
		border-bottom 1px solid white_A
		center(1em)
		color white_A
		display block
		outline none
		font-size 1.5rem
		text-align center
		margin-top 2.5em
	&-footer
		text-align left
	&.is-animated
		margin-top -474px
.Footer
	&-menu
		text-align right
	&-item
		font-size 2rem
		margin-right .5rem
		display inline-block
.Btn
	border none
	border-radius 10px
	cursor pointer
	font-size 1.2rem
	padding .5rem 1rem
	&:active
		transform scale(.9)
	&--red
		btnstyle(red_A,2px solid red_B)
.u-block
	display block
@keyframes fill
	0%
		border none
	25%
		border 0 solid transparent
		border-right 2px solid white_A
	50%
		border 0 solid transparent
		border-bottom 2px solid white_A
	75%
		border 0 solid transparent
		border-left 2px solid white_A
	100%
		border 0 solid transparent
		border-top 2px solid white_A
@media (min-width: 789px)
	.Obtainer
		&-input
			font-size 3rem
	.Albums
		&-album
			display inline-block
		&.is-animated
			padding-top 120px